# 雙資料庫環境配置

# 市場數據資料庫配置 (唯讀)
MARKET_DB_HOST=market-db
MARKET_DB_PORT=5431
MARKET_DB_USER=market_user
MARKET_DB_PASSWORD=market_pass
MARKET_DB_NAME=marketdata

# 回測資料庫配置 (讀寫)
BACKTEST_DB_HOST=backtest-db
BACKTEST_DB_PORT=5432
BACKTEST_DB_USER=backtest_user
BACKTEST_DB_PASSWORD=backtest_pass
BACKTEST_DB_NAME=backtest

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ 配置
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_MANAGEMENT_PORT=15672

# TimescaleDB 性能配置
TIMESCALEDB_SHARED_BUFFERS=256MB
TIMESCALEDB_MAX_CONNECTIONS=100
TIMESCALEDB_EFFECTIVE_CACHE_SIZE=1GB
TIMESCALEDB_MAX_BACKGROUND_WORKERS=8

# 開發環境配置
RUST_BACKTRACE=1
RUST_LOG=debug